{
    "window": {
        "alwaysOnTop": true,
        "top": 0,
        "right": 0
    },
    "watcher": {
        "paths": ["js", "css"]
    },
    "tasks": [
        {
            "name": "JS Tests",
            "command": "npm test",
            "parser": "tap",
            "fileMatcher": "\\.js$"
        },
        {
            "name": "Stylus",
            "command": "stylus css",
            "parser": "exitcode",
            "fileMatcher": "\\.styl$"
        },
        {
            "name": "JSHint",
            "command": "jshint js",
            "parser": "exitcode",
            "fileMatcher": "\\.js$"
        }
    ]
}
