*
    box-sizing: border-box

html, body
    margin: 0
    padding: 0

.status
    width: 100px
    height: 100px
    padding: 40px
    color: rgba(255,255,255,0.7)
    text-shadow: 1px 1px 2px rgba(0,0,0,0.4)
    font-size: 20px
    font-weight: bold

    &.ok
        background: #8cba7b
        &:before
            content: 'âˆš'

    &.running
        background: yellow

        &:before
            content: 'running'

    &.error
