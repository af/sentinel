*
    box-sizing: border-box

@font-face
    font-family: 'icons'
    src: url('icons.woff') format('woff')
    font-weight: normal
    font-style: normal

@-webkit-keyframes rotate
    0%
        -webkit-transform: rotate(0deg)
    100%
        -webkit-transform: rotate(360deg)

html, body
    margin: 0
    padding: 0
    background: linear-gradient(#ddd, #ccc)

.status
    width: 100px
    height: 100px
    padding: 35px 0
    color: rgba(255,255,255,0.8)
    text-shadow: 1px 1px 2px rgba(0,0,0,0.4)
    font-family: icons
    font-size: 30px
    font-weight: bold
    text-align: center
    transition: background 0.2s

    &.ok
        background: #8cba7b

        div:before
            content: 'âˆš'

    &.running
        background: #cccf49

        div
            -webkit-animation: rotate 1.5s infinite linear

        div:before
            content: 'r'

    &.error
        background: red

        div:before
            content: 'X'
